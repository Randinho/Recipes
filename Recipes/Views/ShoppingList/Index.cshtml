@model IList<Recipes.ViewModels.ShoppingListItemViewModel>


<h1>Shopping List Generator</h1>

<h4>Select ingredients that you have in possession</h4>

@using (Html.BeginForm("Create", "ShoppingList", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{ 
@for (int i = 0; i < Model.Count; i++)
{
<div class="row">  
        <div class="col-md-2">
            @Model[i].Name
            @Html.HiddenFor(m => m[i].Id)
            @Html.HiddenFor(m => m[i].Name)
        </div>
        <div class="col-md-1">
            @Html.CheckBoxFor(m => m[i].InPossession)
        </div> 
</div>
    
}
<button type="submit">Submit</button>
}